<?xml version="1.0" encoding="UTF-8"?>
<events>
	<!-- 执行查询sql的事件，执行完之后将结果集以csv格式的字符串返回 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<!--一个事件中可以包含一个或者多个属性 -->
		<property name="CMD">
			ExecuteCSVBySqlEvent
		</property>
		<property name="sql_str">
			SELECT
			*,hh_size_pretty(hh_database_size(hh_database.datname))
			AS size
			FROM
			hh_database,hh_user u,hh_tablespace t
			WHERE
			datdba=u.usesysid
			AND
			dattablespace=t.oid
			AND datname='hhdb'
		</property>
	</event>
	
	<!-- 执行查询sql的事件，执行完之后将结果集以List<List<Object>>格式的字符串返回 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<!--一个事件中可以包含一个或者多个属性 -->
		<property name="CMD">
			ExecuteListBySqlEvent
		</property>
		<property name="sql_str">
			SELECT
			*,hh_size_pretty(hh_database_size(hh_database.datname))
			AS size
			FROM
			hh_database,hh_user u,hh_tablespace t
			WHERE
			datdba=u.usesysid
			AND
			dattablespace=t.oid
			AND datname='hhdb'
		</property>
	</event>
	
	<!-- 执行查询sql的事件，执行完之后将结果集以List<Map<String, Object>>格式的字符串返回 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<!--一个事件中可以包含一个或者多个属性 -->
		<property name="CMD">
			ExecuteListMapBySqlEvent
		</property>
		<property name="sql_str">
			SELECT
			*,hh_size_pretty(hh_database_size(hh_database.datname))
			AS size
			FROM
			hh_database,hh_user u,hh_tablespace t
			WHERE
			datdba=u.usesysid
			AND
			dattablespace=t.oid
			AND datname='hhdb'
		</property>
	</event>
	<!-- 执行增，删，改sql的事件。 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<!--一个事件中可以包含一个或者多个属性 -->
		<property name="CMD">
			ExecuteUpdateBySqlEvent
		</property>
		<property name="sql_str">
			delete from test
		</property>
	</event>
	<!-- 执行查询sql,但不返回结果集事件 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<property name="CMD">
			ExecuteQueryDQLBySqlEvent
		</property>
		<!--一个事件中可以包含一个或者多个属性 -->
		<property name="sql_str">
			select * into em from emails
		</property>
	</event>
	
	<!-- 设置是否是超级用户 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<property name="CMD">
			setSuperuser
		</property>
		<property name="superuser_value">
			true
		</property>
	</event>
	
	<!-- 获取是否是超级用户 -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<property name="CMD">
			getSuperuser
		</property>
	</event>
	
	<!-- 获取ServerBean -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<property name="CMD">
			GetServerBean
		</property>
	</event>
	
	<!-- 获取ServerBean -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<property name="CMD">
			GetConn
		</property>
	</event>
	
	<!-- 设置ServerBean -->
	<event from="com.hhdb.csadmin.plugin.test" to="com.hhdb.csadmin.plugin.conn"
		type="CMD">
		<property name="CMD">
			SetConn
		</property>
		<property name="host_str">
			118.190.201.243
		</property>
		<property name="post_str">
			1432
		</property>
		<property name="dbname_str">
			hhdb
		</property>
		<property name="username_str">
			dba
		</property>
		<property name="pass_str">
			123456
		</property>
		<property name="superuser_value">
			true
		</property>
	</event>
</events>